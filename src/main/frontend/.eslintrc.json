{
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "pv"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "browser": true
  },
  "root": true,
  "rules": {
    "global-require": 0,
    "no-console": "off",
    "no-warning-comments": [1, { "terms": ["todo", "fixme", "xxx"], "location": "start" }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
